<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/stream_settings"
    tools:context=".preferences.StreamSettings">

    <ImageView
        android:id="@+id/settingsBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    
    <View
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:background="#B3333333" />
    
    <LinearLayout
        android:id="@+id/settings_nav_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_safearea_top"
        android:paddingBottom="8dp"
        android:paddingLeft="0dp"
        android:gravity="center_vertical"
        android:fitsSystemWindows="false">

        <ImageView
            android:id="@+id/settings_nav_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_grid_view"
            android:background="@drawable/toggle_button_background"
            android:scaleType="fitCenter"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:minHeight="28dp"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <HorizontalScrollView
                android:id="@+id/settings_nav_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/settings_nav_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" />
            </HorizontalScrollView>

            <ScrollView
                android:id="@+id/settings_nav_grid_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="gone">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/settings_nav_grid_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="8dp"
                    app:flexWrap="wrap"
                    app:flexDirection="row"
                    app:alignItems="center" />
            </ScrollView>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/preference_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_below="@id/settings_nav_root"/>
        
</RelativeLayout>